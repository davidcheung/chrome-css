{
  "manifest_version": 2,

  "name": "Custom CSS",
  "description": "Custom your CSS per domain",
  "version": "1.0",

  "browser_action": {
    "default_icon": "assets/icon.png",
    "default_popup": "popup/index.html"
  },
  "background" : {
    "scripts" : ["background/app.js"]
  },
  "permissions": [
    "activeTab", "webNavigation", "tabs",
    "notifications",
    "http://*/",
    "https://*/"
  ]
}